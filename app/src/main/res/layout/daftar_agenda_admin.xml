<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warnabiru"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="daftar agenda"
            android:textColor="@color/wanaputih"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_adddaftaragenda"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_btn_tambah"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_daftaragendaadmin"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="30dp" />
    <Button
        android:id="@+id/btn_keluaradmin"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_radiusmerah"
        android:layout_gravity="center"
        android:text="keluar"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

</LinearLayout>
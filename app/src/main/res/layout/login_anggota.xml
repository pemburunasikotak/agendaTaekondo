<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041555"
    android:orientation="vertical"
    tools:context=".anggota.LoginAnggota">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/logoukm"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_bg_abuabu">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="UKM TAEKWONDO"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:textColor="@color/warnahitam"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp">

        <EditText
            android:id="@+id/et_email_anggota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_bg_putihradius10"
            android:hint="email"
            android:textAlignment="center"
            android:textColor="@color/warnahitam" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_passwd_anggota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_bg_putihradius10"
            android:hint="pasword"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/warnahitam" />

    </LinearLayout>
    
    <Button
        android:id="@+id/btn_loginkaryawan"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_bg_biru"
        android:layout_marginTop="36dp"
        android:layout_gravity="center"
        android:text="login"/>
    
    <TextView
        android:id="@+id/et_loginadmin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Login admin"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:textColor="@color/wanaputih"/>
    <TextView
        android:id="@+id/btn_createakun"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Create Akun"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:textColor="@color/wanaputih"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warnabiru"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tambah agenda"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/wanaputih"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="87dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_bg_abu_abu_radius"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="nama"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/warnahitam"
            android:textSize="25sp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:hint="nama"
            android:textAllCaps="false"
            android:textColor="@color/warnahitam"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="171dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_abuabugede"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="deskripsi"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/warnahitam"
            android:textSize="25sp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginLeft="10dp"
            android:hint="deskripsi"
            android:textAllCaps="false"
            android:textColor="@color/warnahitam"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_bg_abu_abu_radius"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Waktu"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/warnahitam"
            android:textSize="25sp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:hint="waktu"
            android:textAllCaps="false"
            android:textColor="@color/warnahitam"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_abuabugede"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Lokasi"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/warnahitam"
            android:textSize="25sp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:hint="lokasi"
            android:textAllCaps="false"
            android:textColor="@color/warnahitam"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_bg_biru"
        android:layout_marginLeft="200dp"
        android:text="Simpan"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

</LinearLayout>
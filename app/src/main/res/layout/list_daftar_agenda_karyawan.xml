<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ic_abuabugede"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tv_namaAgendaAnggota"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/nama_agenda"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_agendaadminAnggota"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_marginLeft="5dp"
            android:text="halo"
            android:textColor="@color/warnahitam" />
        <TextView
            android:id="@+id/tv_deskagendaAnggota"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="0dp"
            android:text="halo"
            android:textColor="@color/warnahitam" />
        <TextView
            android:id="@+id/tv_waktuagendaAnggota"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="0dp"
            android:text="halo"
            android:textColor="@color/warnahitam" />



    </LinearLayout>


</LinearLayout>